@using BadBee.Core.MyResources;
@model BadBeeCatalog.Models.SearchModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="search-table" style="position:relative;">
@{ 
    Html.RenderPartial("BreadcrumbsView");
}
    <div class="search-title" id="s-title">       
        <a></a>
       </div>
    <div class="search-table-container">
        
        <table style="padding:50px;">
            @for (int i = 0; i < Model.Columns[0].Rows.Count; i++)
        {
                @*<tr class="spacer"></tr>*@
                <tr>
                    @for (int j = 0; j < Model.Columns.Count; j++)
                {
                    if (Model.Columns[j].Rows.Count > i)
                    {
                        if (!string.IsNullOrEmpty(Model.Columns[j].Rows[i].Name))
                        {
                            if (Model.Columns[j].Rows[i].Name == "Przyczepa, naczepa / Trailer, semitrailer")
                            {
                                    <td @if(Request.QueryString["brand"] !=null){ @Html.Raw("style=\"vertical-align:top !important;\"") ; } height="50px" width="25%"><div onclick="window.location='@Url.Action("Index", "Search", @Model.Columns[j].Rows[i].CustomParams)'" title="@Model.Columns[j].Rows[i].Name">@Resources.trailer </div></td>
                            }
                            else {
                                    <td @if(Request.QueryString["brand"] !=null){ @Html.Raw("style=\"vertical-align:top !important;\"") ; } height="50px" width="25%"><div onclick="window.location='@Url.Action("Index", "Search", @Model.Columns[j].Rows[i].CustomParams)'" title="@Model.Columns[j].Rows[i].Name">@Model.Columns[j].Rows[i].Name </div></td>
                            }


                        }
                        else
                        {
                                <td @if(Request.QueryString["brand"] !=null){ @Html.Raw("style=\"vertical-align:top !important;\"") ; } height="50px" width="25%"><div onclick="window.location='@Url.Action("Index", "Search", @Model.Columns[j].Rows[i].CustomParams)'" title="@Model.Columns[j].Rows[i].Name">@Resources.baseserie</div></td>
                        }
                    }
                    else
                    {
                            <td @if(Request.QueryString["brand"] !=null){ @Html.Raw("style=\"vertical-align:top !important;\"") ; } height="50px" width="25%"></td>
                    }
                }
                </tr>

        }
        </table>
    </div>
</div>
