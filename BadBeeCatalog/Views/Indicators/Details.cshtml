@using Lumag.Core.MyResources;

@model Lumag.Core.DAL.Indicators

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.fancybox.js"></script>
<link rel="stylesheet" href="~/Scripts/jquery.fancybox.css" type="text/css" media="screen" />
<html>
<body>
    <div class="col-xs-12 colContent">
        <div id="catalogPrintable">
            <div class="back">
                <span><</span> <a href="/Indicators">@Resources.back_to_indicators</a>
            </div>
            <div class="details_container">
                <div class="schema_indicator">
                    @{ 
                        string picture = Model.LumagNo.Replace(" ","") + ".jpg";
                    }

                    <a class="fancybox" rel="gallery1" href="~/Images/Pictures/@picture" >
                        <img src="~/Images/Pictures/@picture" alt="" />
                    </a>
                    @*<img src="~/Images/Pictures/@picture" alt="" />*@
                </div>
                <div class="desc">



                    <table class="table table-striped tableDetails">
                        <tbody id="catalogTableDetails">

                            @if (!string.IsNullOrEmpty(Model.LumagNo))
                            {
                                <tr class="detdesc"><td>@Resources.lumag_no: </td><td class="detval" style="border-right:0 !important;">@Model.LumagNo</td> </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <tr class="detdesc"><td>@Resources.description: </td><td class="detval" style="border-right:0 !important;">@Resources.wear_indicator + @Model.Description</td> </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.Length))
                            {
                                <tr class="detdesc"><td>@Resources.length: </td><td class="detval" style="border-right:0 !important;">@Model.Length</td> </tr> }
                            @if (!string.IsNullOrEmpty(Model.Application))
                            {
                                <tr class="detdesc"><td>@Resources.application: </td><td class="detval" style="border-right:0 !important;">@Model.Application</td> </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.Quantity))
                            {
                                <tr class="detdesc"><td>@Resources.qtt_in_kit: </td><td class="detval" style="border-right:0 !important;">@Model.Quantity</td> </tr>
                            }
                           

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        jQuery(function ($) {

            $("a[rel=gallery1]").fancybox({
                'transitionIn': 'none',
                'transitionOut': 'none',
                'titlePosition': 'over',
                'cyclic': true,
                'titleFormat': function (title, currentArray, currentIndex, currentOpts) {
                    return '<span id="fancybox-title-over">Image ' + (currentIndex + 1) + ' / ' + currentArray.length + ' ' + title + '</span>';
                }
            });
        });

    </script>
</body>
</html>
